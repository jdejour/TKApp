<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blueAlumni">

    <ImageView
        android:id="@+id/image_tradition"
        android:layout_width="344dp"
        android:layout_height="212dp"
        android:layout_marginBottom="520dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@color/greenAlumni" />

    <TextView
        android:id="@+id/text_tradition_name_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="476dp"
        android:gravity="end"
        android:text="@string/traditions_name"
        android:textColor="@color/ltgreyAlumni"
        android:textSize="20sp"
        android:textStyle="bold"
        app:fontFamily="@font/montserrat"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/image_tradition"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/text_tradtition_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="192dp"
        android:layout_marginRight="192dp"
        android:layout_marginBottom="440dp"
        android:gravity="end"
        android:text="@string/traditions_date"
        android:textColor="@color/ltgreyAlumni"
        android:textSize="12sp"
        app:fontFamily="@font/montserrat"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_tradition"
        app:layout_constraintVertical_bias="0.746" />

    <TextView
        android:id="@+id/text_tradition_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="196dp"
        android:layout_marginLeft="196dp"
        android:layout_marginBottom="440dp"
        android:gravity="end"
        android:text="@string/traditions_time"
        android:textColor="@color/ltgreyAlumni"
        android:textSize="12sp"
        app:fontFamily="@font/montserrat"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/text_tradtition_date"
        app:layout_constraintTop_toTopOf="@+id/text_tradition_name_title"
        app:layout_constraintVertical_bias="0.68" />

    <TextView
        android:id="@+id/text_tradition_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginBottom="408dp"
        android:gravity="end"
        android:text="@string/traditions_location"
        android:textColor="@color/ltgreyAlumni"
        android:textSize="12sp"
        app:fontFamily="@font/montserrat"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.822"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_tradition"
        app:layout_constraintVertical_bias="0.778" />

    <TextView
        android:id="@+id/text_tradition_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="204dp"
        android:gravity="left|end"
        android:text="@string/traditions_story"
        android:textColor="@color/ltgreyAlumni"
        android:textSize="15sp"
        app:fontFamily="@font/montserrat"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.073"
        app:layout_constraintStart_toEndOf="@+id/text_profile_class_title"
        app:layout_constraintTop_toBottomOf="@+id/text_profile_name" />

</androidx.constraintlayout.widget.ConstraintLayout>