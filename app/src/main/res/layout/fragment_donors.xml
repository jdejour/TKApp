                android:textColor="@color/ltgreyAlumni"
                android:textSize="20sp" />

            <Button
                android:id="@+id/button_donor_name6"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="@color/navyAlumni"
                android:text="@string/donors_name"
                android:textColor="@color/ltgreyAlumni"
                android:textSize="20sp" />

            <Button
                android:id="@+id/button_donor_name7"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="@color/navyAlumni"
                android:text="@string/donors_name"
                android:textColor="@color/ltgreyAlumni"
                android:textSize="20sp" />

            <Button
                android:id="@+id/button_donor_name8"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="@color/navyAlumni"
                android:text="@string/donors_name"
                android:textColor="@color/ltgreyAlumni"
                android:textSize="20sp" />

            <Button
                android:id="@+id/button_donor_name9"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="@color/navyAlumni"
                android:text="@string/donors_name"
